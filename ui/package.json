{
  "name"       : "imiyc",
  "version"    : "0.0.1",
  "description": "UI for the game 'Infect me if you can'.",
  "author"     : "Dimitri Racordon",
  "devDependencies": {
    "babel-preset-es2015" : "latest",
    "babel-preset-react"  : "latest",
    "babel-preset-stage-2": "latest",
    "babelify"            : "latest",
    "babel-register"      : "latest",
    "browserify"          : "latest",
    "uglify-js"           : "latest",
    "watchify"            : "latest"
  },
  "dependencies": {
    "bluebird"            : "latest",
    "d3"                  : "latest",
    "d3-force"            : "latest",
    "deepcopy"            : "latest",
    "react"               : "latest",
    "react-dom"           : "latest",
    "react-redux"         : "latest",
    "redux"               : "latest",
    "redux-logger"        : "latest",
    "redux-thunk"         : "latest",
    "socket.io-client"    : "latest"
  },
  "babel": {
    "presets": ["es2015", "react", "stage-2"]
  },
  "browserify": {
    "transform": ["babelify"]
  },
  "scripts": {
    "clean"      : "rm -f ../static/bundle.*",
    "build-debug": "browserify src/main.js -o ../static/bundle.js -v -d",
    "build"      : "browserify src/main.js | uglifyjs -cm > ../static/bundle.js",
    "watch"      : "watchify src/main.js -o ../static/bundle.js -v -d"
  }
}
